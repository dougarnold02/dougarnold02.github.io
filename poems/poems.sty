    %% poem: \begin{poem}{TITLE}{AUTHOR} ..... \end{poem}
\newenvironment{poem}[2]{\pagebreak[3]%
                           \begin{verse}
                           \parbox{\textwidth-2\leftmargin}{%
                           \begin{center}
                             \textbf{#1}\\\emph{#2}\\[2ex]%
                         \end{center}}
                       }
                          {\end{verse}}

